        "main.DeleteResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            }
        },
        "main.ErrorResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            }
        },
        "main.Todo": {
            "description": "Todo represents a task in the list",
            "type": "object",
            "properties": {
                "id": {
                    "description": "The ID of the todo task",
                    "type": "integer"
                },
                "status": {
                    "description": "Status of the task: \"pending\", \"completed\"",
                    "type": "string"
                },
                "task": {
                    "description": "The name or description of the task",
                    "type": "string"
                }
            }
        }
    }
